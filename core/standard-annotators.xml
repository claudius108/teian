<teian:annotators xmlns:teian="http://kuberam.ro/ns/teian" xmlns="http://www.w3.org/1999/xhtml" model-version="0.1">
    <teian:annotator id="save-button" name="" editable="false" type-code="action">
        <teian:annotator-description-text>Save current document.</teian:annotator-description-text>
        <teian:annotator-attribute/>
    </teian:annotator>
    <teian:annotator id="store-button" name="" type-code="action">
        <teian:annotator-description-text>Store current document.</teian:annotator-description-text>
        <teian:annotator-attribute/>
    </teian:annotator>
    <teian:annotator id="word-count-button" name="" type-code="action">
        <teian:annotator-description-text>Count words for current document.</teian:annotator-description-text>
        <teian:annotator-attribute/>
    </teian:annotator>
    <teian:annotator id="annotate-button" name="" editable="false" type-code="action">
        <teian:annotator-description-text>Save document.</teian:annotator-description-text>
        <teian:annotator-icon-name/>
        <teian:annotator-possible-parent-element-names/>
        <teian:annotator-attribute/>
    </teian:annotator>
    <teian:annotator id="source-button" name="" editable="false" type-code="action">
        <teian:annotator-description-text>View source of document.</teian:annotator-description-text>
        <teian:annotator-icon-name/>
        <teian:annotator-possible-parent-element-names/>
        <teian:annotator-attribute/>
    </teian:annotator>
    <teian:annotator id="lock-button" name="" editable="false" type-code="action">
        <teian:annotator-description-text>Lock document.</teian:annotator-description-text>
        <teian:annotator-icon-name/>
        <teian:annotator-possible-parent-element-names/>
        <teian:annotator-attribute/>
    </teian:annotator>
    <teian:annotator id="unlock-button" name="" editable="false" type-code="action">
        <teian:annotator-description-text>Unlock document.</teian:annotator-description-text>
        <teian:annotator-icon-name/>
        <teian:annotator-possible-parent-element-names/>
        <teian:annotator-attribute/>
    </teian:annotator>
    <teian:annotator id="back-button" name="" editable="false" type-code="action">
        <teian:annotator-description-text>Save current document.</teian:annotator-description-text>
        <teian:annotator-icon-name/>
        <teian:annotator-possible-parent-element-names/>
        <teian:annotator-attribute/>
    </teian:annotator>
    <teian:annotator id="toggle-changes-button" name="" editable="false" type-code="action">
        <teian:annotator-description-text>Track changes in document.</teian:annotator-description-text>
        <teian:annotator-icon-name/>
        <teian:annotator-possible-parent-element-names/>
        <teian:annotator-attribute/>
    </teian:annotator>
    <teian:annotator id="help-button" name="" editable="false" type-code="action">
        <teian:annotator-description-text>Display documentation for teian.</teian:annotator-description-text>
        <teian:annotator-icon-name/>
        <teian:annotator-possible-parent-element-names/>
        <teian:annotator-attribute/>
        <teian:annotator-panel>
            <div id="help-dialog" title="">
                <div id="help-dialog-content" ref="simpath:instance('ui-lang')//teian:annotator[@id = 'help-button']/teian:annotator-panel/teian:annotator-panel-element[@id = 'help-dialog-content']/text()"/>
            </div>
            <script type="text/javascript" charset="utf-8">
		$("#help-dialog").attr('title', $x.xpath("simpath:instance('ui-lang')//teian:annotator[@id = 'help-button']/teian:annotator-panel/teian:annotator-panel-title/text()"));
		//alert($x.xpath("simpath:instance('ui-lang')//teian:annotator[@id = 'help-button']/teian:annotator-panel/teian:annotator-panel-element/@xlink:href")[0].value);
		$("#help-dialog-content").load($x.xpath("simpath:instance('ui-lang')//teian:annotator[@id = 'help-button']/teian:annotator-panel/teian:annotator-panel-element/@xlink:href")[0].value + ' .article, .copyright');
		teian.ui['help-dialog'] = $("#help-dialog").dialog({
			autoOpen: false,
			width : 1000,
			height : 500,
			modal : true,
			buttons: {
				"Close": function() {
					$( this ).dialog( "close" );
				}
			}
		});		
		</script>
        </teian:annotator-panel>
    </teian:annotator>
    <teian:annotator id="edit-entity-button" name="" editable="false" type-code="action">
        <teian:annotator-description-text>Edit any of the properties of the selected entity.</teian:annotator-description-text>
        <teian:annotator-icon-name>edit-entity.gif</teian:annotator-icon-name>
        <teian:annotator-possible-parent-element-names/>
        <teian:annotator-attribute/>
    </teian:annotator>
    <teian:annotator id="clear-entity-button" name="" editable="false" type-code="action">
        <teian:annotator-description-text>Remove the selected entity annotation.</teian:annotator-description-text>
        <teian:annotator-icon-name>clear-entity.gif</teian:annotator-icon-name>
        <teian:annotator-possible-parent-element-names/>
        <teian:annotator-attribute/>
        <teian:annotator-panel>
            <div id="clear-entity-dialog" title="">
                <span id="clear-entity-label" ref="simpath:instance('ui-lang')//teian:annotator[@id = 'clear-entity-button']/teian:annotator-panel/teian:annotator-panel-element[@id = 'clear-entity-label']/text()" style="white-space: normal;"/>
            </div>
            <script type="text/javascript" charset="utf-8">
		$("#clear-entity-dialog").attr('title', $x.xpath("simpath:instance('ui-lang')//teian:annotator[@id = 'clear-entity-button']/teian:annotator-panel/teian:annotator-panel-title/text()"));
		$("#clear-entity-label").text($x.xpath($("#clear-entity-label").attr('ref')));
		$("#help-dialog-content").load($x.xpath("simpath:instance('ui-lang')//teian:annotator[@id = 'help-button']/teian:annotator-panel/teian:annotator-panel-element/@xlink:href")[0].value + ' .article, .copyright');
		teian.ui['clear-entity-dialog'] = $("#clear-entity-dialog").dialog({
			autoOpen: false,
			width : 390,
			height : 200,
			modal : true,
			buttons: {			
				"Clear": function() {
					$(this).dialog("close");
					$(teian.utils.oEntityToClear).replaceWith($(teian.utils.oEntityToClear).text());
					$("#clear-entity-label").text($x.xpath($("#clear-entity-label").attr('ref')));
				},			
				"Cancel": function() {
					$(this).dialog("close");
					teian.utils.oEntityToClear = null;
					$("#clear-entity-label").text($x.xpath($("#clear-entity-label").attr('ref')));
				}				
			},
			open: function(event, ui) {
				$("#clear-entity-label").text($("#clear-entity-label").text().replace(/%entityName/, teian.utils.oEntityToClear.nodeName));
			}
		});		
		</script>
        </teian:annotator-panel>
    </teian:annotator>
</teian:annotators>